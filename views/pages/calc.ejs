    <div class="container-sm parent wrapdiv">
      <form action="/api-kiraShamelin" method="post">
      <div class="row">
        <div class="col-4 child top_align">
          <h3>Maklumat Pemohon</h3>
          <div class="col">
            <!-- NAMA -->
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="nama"
                name="nama"
                placeholder="Nama"
                value="Test Subject"
              />
              <label for="floatingInput">Nama</label>
            </div>
            <!-- NO KP -->
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="noKP"
                name="noKP"
                placeholder="No Kad Pengenalan"
                value="871027-38-5427"
              />
              <label for="floatingInput">No Kad Pengenalan</label>
            </div>
  
            <div class="row">
              <div class="col">
                <!-- GAJI ELAUN TETAP -->
                <div class="form-floating mb-3">
                  <input
                    type="number"
                    class="form-control"
                    id="gajiElaunTetap"
                    name="gajiElaunTetap"
                    placeholder="Gaji & Elaun Tetap"
                    value="10000"
                  />
                  <label for="floatingInput">Gaji & Elaun Tetap (RM)</label>
                </div>
              </div>
              <div class="col">
                <div class="col">
                  <!-- POTONGAN PAYSLIP  -->
                  <div class="form-floating mb-3">
                    <input
                      type="number"
                      class="form-control"
                      id="potonganPayslip"
                      name="potonganPayslip"
                      placeholder="Potongan Gaji"
                      value="6001"
                    />
                    <label for="floatingInput">Potongan Gaji (RM)</label>
                  </div>
                </div>
              </div>
            </div>
  
            <div class="row">
              <div class="col">
                <div class="col">
                  <!-- PERATUS POTONGAN DIBENARKAN  -->
                  <div class="form-floating mb-3">
                    <input
                      type="number"
                      class="form-control"
                      id="peratusPotonganDibenarkan"
                      name="peratusPotonganDibenarkan"
                      placeholder="Potongan Dibenarkan"
                      value="60"
                      max="60"
                    />
                    <label for="floatingInput">Potongan Dibenarkan (%)</label>
                  </div>
                </div>
              </div>
  
              <div class="col">
                <div class="col">
                  <!-- UMUR PENCEN  -->
                  <div class="form-floating mb-3">
                    <input
                      type="number"
                      class="form-control"
                      id="umurPencen"
                      name="umurPencen"
                      placeholder="Umur Pencen"
                      value="60"
                      min="50"
                      max="60"
                    />
                    <label for="floatingInput">Umur Pencen (Tahun)</label>
                  </div>
                </div>
              </div>
            </div>
  
            <div class="row">
              <div class="col">
                <!-- Semak Button  -->
                <button
                  type="submit"
                  id="semakButton"
                  class="btn btn-primary"
                  name="submit"
                  >
                  
                  Semak
                </button>
                <button
                  type="button"
                  class="btn btn-warning"
                  onClick="window.location.reload();"
                >
                  Reset
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- //// -->
        <div class="col-6 child top_align">
          <h3>Penyelesaian Awal</h3>
          <div class="row">
            <div class="col-4">
              <!-- Institusi 1  -->
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="institusi1"
                  name="institusi1"
                  placeholder="Institusi 1"
                />
                <label for="floatingInput">Institusi 1</label>
              </div>
            </div>
            <div class="col-4">
              <!-- Jumlah Penyelesaian 1  -->
              <div class="form-floating mb-3">
                <input
                  type="number"
                  class="form-control"
                  id="jumlahPenyelesaian1"
                  name="jumlahPenyelesaian1"
                  placeholder="Jumlah Penyelesaian 1"
                />
                <label for="floatingInput">Jumlah Penyelesaian 1</label>
              </div>
            </div>
            <div class="col-4">
              <!-- Ansuran Bulanan 1  -->
              <div class="form-floating mb-3">
                <input
                  type="number"
                  class="form-control"
                  id="ansuranBulanan1"
                  name="ansuranBulanan1"
                  placeholder="Ansuran Bulanan 1"
                />
                <label for="floatingInput">Ansuran Bulanan 1</label>
              </div>
            </div>
          </div>

          
        </div>
      </div>
    </div>
