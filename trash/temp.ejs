<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <title>Modal Popup</title>
  <style>
    /* Add custom styles here if needed */
  </style>
</head>
<body>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Open Modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6">
              <label for="additionalInput">Additional Text Input:</label>
              <input type="text" class="form-control" id="additionalInput">
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-2">Column 1</div>
            <div class="col-md-2">Column 2</div>
            <div class="col-md-2">Column 3</div>
            <div class="col-md-2">Column 4</div>
            <div class="col-md-2">Column 5</div>
          </div>
          <div class="row mt-2">
            <!-- Input fields for column 1 -->
            <div class="col-md-2"><input type="number" class="form-control column-1"></div>
            <!-- Input fields for column 2 -->
            <div class="col-md-2"><input type="number" class="form-control column-2"></div>
            <!-- Input fields for column 3 -->
            <div class="col-md-2"><input type="number" class="form-control column-3"></div>
            <!-- Input fields for column 4 -->
            <div class="col-md-2"><input type="number" class="form-control column-4"></div>
            <!-- Input fields for column 5 -->
            <div class="col-md-2"><input type="number" class="form-control column-5"></div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="calculateSum()">Save</button>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
  function calculateSum() {
    // Get values from each column
    const column1Sum = sumValues('.column-1');
    const column2Sum = sumValues('.column-2');
    const column3Sum = sumValues('.column-3');
    const column4Sum = sumValues('.column-4');
    const column5Sum = sumValues('.column-5');

    // Display the sums in non-editable input fields
    $('#additionalInput').val(column1Sum + column2Sum + column3Sum + column4Sum + column5Sum);
  }

  function sumValues(className) {
    let sum = 0;
    $(className).each(function () {
      const value = parseFloat($(this).val()) || 0;
      sum += value;
    });
    return sum;
  }
</script>

</body>
</html>