    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/KA-Logo.svg" />
    <link rel="stylesheet" type="text/css" href="/gaya-main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"
          ><img
            src="/KA-Logo.svg"
            alt="KA"
            width="30"
            height="30"
            class="d-inline-block align-text-top"
        /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
            <a class="nav-link" href="#">Calculator</a>
            <a class="nav-link" href="#">Senarai Kod BPA</a>
            <a class="nav-link disabled" aria-disabled="true">Coming Soon</a>
          </div>
        </div>
        <div style="float: right">
          <i
            class="bi bi-power"
            style="color: red; font-weight: 900; font-size: x-large"
          ></i>
        </div>
      </div>
    </nav>

    <div class="container-sm wrapdiv">
      <h3>Maklumat Pemohon</h3>
      <form id="calcKSB" onsubmit="handleRequest(); return false;">
        <div class="col">
          <!-- NAMA -->
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="nama"
              placeholder="Nama"
              value="Test Subject"
            />
            <label for="floatingInput">Nama</label>
          </div>
          <!-- NO KP -->
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="noKP"
              placeholder="No Kad Pengenalan"
              value="871027-38-5427"
            />
            <label for="floatingInput">No Kad Pengenalan</label>
          </div>

          <div class="row">
            <div class="col">
              <!-- GAJI ELAUN TETAP -->
              <div class="form-floating mb-3">
                <input
                  type="number"
                  class="form-control"
                  id="gajiElaunTetap"
                  placeholder="Gaji & Elaun Tetap"
                  value="10000"
                />
                <label for="floatingInput">Gaji & Elaun Tetap (RM)</label>
              </div>
            </div>
            <div class="col">
              <div class="col">
                <!-- POTONGAN PAYSLIP  -->
                <div class="form-floating mb-3">
                  <input
                    type="number"
                    class="form-control"
                    id="potonganPayslip"
                    placeholder="Potongan Gaji"
                    value="6001"
                  />
                  <label for="floatingInput">Potongan Gaji (RM)</label>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="col">
                <!-- PERATUS POTONGAN DIBENARKAN  -->
                <div class="form-floating mb-3">
                  <input
                    type="number"
                    class="form-control"
                    id="peratusPotonganDibenarkan"
                    placeholder="Potongan Dibenarkan"
                    value="60"
                    max="60"
                  />
                  <label for="floatingInput">Potongan Dibenarkan (%)</label>
                </div>
              </div>
            </div>

            <div class="col">
              <div class="col">
                <!-- UMUR PENCEN  -->
                <div class="form-floating mb-3">
                  <input
                    type="number"
                    class="form-control"
                    id="umurPencen"
                    placeholder="Umur Pencen"
                    value="60"
                    min="50"
                    max="60"
                  />
                  <label for="floatingInput">Umur Pencen (Tahun)</label>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <!-- Semak Button  -->
              <button
                type="submit"
                id="semakButton"
                class="btn btn-primary"
                >
                
                Semak
              </button>
              <button
                type="button"
                class="btn btn-warning"
                onClick="window.location.reload();"
              >
                Reset
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/testaxios111.js" async defer></script>
  </body>
</html>
